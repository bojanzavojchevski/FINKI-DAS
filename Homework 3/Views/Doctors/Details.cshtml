@model HospitalAppointmentApp.Models.Doctor

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Doctor</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.HospitalId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.HospitalId)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
    @Html.ActionLink("Додади пациент", "AddPatient", new { id = Model.Id }, new { @class = "btn btn-success" })
    <h4>Пациенти:</h4>
    <ul>
        @foreach (var patient in Model.Patients)
        {
            <li>@Html.ActionLink(patient.Name, "Details", "Patient", new { id = patient.Id }, null)</li>
        }
    </ul>

</div>
